.container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 260rpx;
  padding: 0 22rpx;
  margin: 0 0 20rpx;
  background: #fff;
}

.pic {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 30%;
  height: 100%;
  vertical-align: middle;
}

.pic image {
  width: 100%;
  height: 80%;
}

.desc {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  width: 60%;
  padding: 20rpx;
  text-align: left;
}

.title {
  font-weight: bold;
  color: #333;
  margin-bottom:60rpx;
}

.price-btn {
  display: flex;
  flex-direction: row; 
  justify-content: space-between;
  align-items: center;
  line-height: 50rpx;
}
.price-btn text{
  color:#ea0000;
  font-weight: 600;
}
.btn { 
  color: #fff;
  background-color: #ED3F14;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0rpx 20rpx;
  border-radius: 12rpx; 
  margin-top: 10rpx;
}
