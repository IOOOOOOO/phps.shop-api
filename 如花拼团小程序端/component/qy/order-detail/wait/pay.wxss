.pay {
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: #fff;
}

.pay_01 {
  display: flex;
  margin-bottom:30rpx;
}

.pay_01_01 {
  width: 80rpx;
  height: 80rpx;
  background-color: #b1b1b1;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
}

.pay_01_02 {
  padding-left: 20rpx;
}

.pay_01_02_01 {
  height: 40rpx;
  overflow: hidden;
}

.pay_01_02_02 {
  height: 40rpx;
  overflow: hidden;
  color: #a0a0a0;
  font-size: 12px;
}

.pay_02 {
  padding: 20rpx 0;
  display: flex;
  color: #a0a0a0;
  justify-content: space-between;
}

.pay_03 {
  display: flex;
  justify-content: space-between;
  background: url(data:image/png;base64,) repeat-x center 10rpx;
  background-size: 100% 10rpx;
}

.pay_03 image {
  height: 30rpx;
  width: 30rpx;
}

.time-box{
  display: flex;
  flex-direction: row;
}
.time-box i-count-down{
  margin:-8px 3px 0;
  padding:0px;
  height:24rpx;
  line-height:24rpx;
  color:#a0a0a0;
}
.H20{
  height:20rpx;
}